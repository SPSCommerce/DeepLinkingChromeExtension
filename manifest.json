{
  "manifest_version": 3,
  "name": "SPS Deep Linking Button",
  "version": "1.0",
  "description": "Adds a button next to inputs with id 'CustomerOrderNbr'.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["*://*/*SO301000*"],
      "js": ["content.js"],
	  "run_at": "document_end"
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["sps.png","spshover.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
